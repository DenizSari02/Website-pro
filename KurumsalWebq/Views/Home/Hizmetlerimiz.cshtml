@model IEnumerable<KurumsalWebq.Models.Model.Hizmet>
@{
    ViewBag.Title = "Hizmetlerimiz";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


<main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background">
        <div class="container position-relative">
            <h1>Avize</h1>
            <p>En şık ve en kaliteli avizeler için doğru yer.</p>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="index.html">Ürünlerimiz</a></li>
                    <li class="current"></li>
                </ol>
            </nav>
        </div>
    </div><!-- End Page Title -->
    <!-- Portfolio Section -->
    <section id="portfolio" class="portfolio section">

        <div class="container">

            <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
<!-- End Portfolio Filters -->

                <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                            <div class="portfolio-content h-100">
                                <img src="@item.ResimURL" class="img-fluid" alt="">
                                <div class="portfolio-info">
                                    <h4>@item.Baslik</h4>
                                    <p>@item.Aciklama</p>
                                    <a href="@item.ResimURL" title="@item.Baslik" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                    <a href="portfolio.html" title="Devamını gör" class="details-link"><i class="bi bi-link-45deg"></i></a>
                                </div>
                            </div>
                        </div>
                        }


                        <!-- End Portfolio Item -->

                    </div><!-- End Portfolio Container -->

            </div>

        </div>

    </section><!-- /Portfolio Section -->

</main>